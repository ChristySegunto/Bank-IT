from tkinter import *
from tkinter import messagebox
from PIL import ImageTk, Image
import tkinter.font as TkFont

deposit = Tk()
deposit.geometry("1100x628")

deposit.title("Bank IT")

deposit.iconbitmap(r"C:\Users\mando\PycharmProjects\pythonProject1\image\logo.ico")

#login window background
loginbg = ImageTk.PhotoImage(file=r"C:\Users\mando\PycharmProjects\pythonProject1\image\bglogin.png")

#Creating canvas for bg and texts
canvas1 = Canvas(deposit, width = 1100,
                 height = 628)

canvas1.pack(fill = "both", expand = True)
canvas1.create_image( 0, 0, image = loginbg,
                     anchor = "nw")

#logo of bank it
logo = ImageTk.PhotoImage(file=r"C:\Users\mando\PycharmProjects\pythonProject1\image\logo.png")
canvas1.create_image( 80, 40, image = logo,
                     anchor = "nw")


#declaring the properties of font
mainfont = TkFont.Font(family="Myriad Pro", size=75, weight="bold")
subfont = TkFont.Font(family="Myriad Pro", size=14)


#creatings texts
canvas1.create_text( 550, 160, text = "Deposit", fill='white', font=mainfont)
canvas1.create_text( 550, 250, text = "How much do you wish to deposit?", fill='white', font=subfont)

def back(event):
    deposit.destroy()
    #import home

backPhoto = ImageTk.PhotoImage(Image.open(r"C:\Users\mando\PycharmProjects\pythonProject1\image\backbtn.png"))
btnBack = canvas1.create_image(1000, 590, image=backPhoto)
canvas1.tag_bind(btnBack, "<Button-1>", back)

depositfont = TkFont.Font(family="Myriad Pro", size=40)
deposit_value1 = StringVar()
deposit1_img= Image.open(r"C:\Users\mando\PycharmProjects\pythonProject1\image\txtbox.png")
deposit1_resize = deposit1_img.resize((500, 300))
deposit1 = ImageTk.PhotoImage(deposit1_resize)
canvas1.create_image(550, 300, anchor="nw", image=deposit1)

#declaring limits for pin 1
def deposit1_limit(*args):
    if len(deposit_value1.get()) > 0:
        deposit_value1.set(deposit_value1.get()[-1])
    if deposit_value1.get().isnumeric() == False:
        messagebox.showerror('Error!', 'You must input a number')
        deposit1_entry.delete(len(deposit1_entry.get()) - 1)

deposit_value1.trace("w", lambda *args: deposit1_limit(deposit_value1))

#creating text box for pin1
deposit1_entry = Entry(deposit,
                    font=depositfont,
                    width=9,
                    fg="white",
                    bd=0,
                    bg="#161B81",
                    justify="center",
                    textvariable = deposit_value1)
deposit1_entry.pack()
deposit1 = canvas1.create_window(550, 300, window=deposit1_entry)
deposit1_entry.bind('<BackSpace>', lambda *args:'break')





deposit.resizable(False, False)
deposit.mainloop()
